{# views/signup.twig #}
{% extends 'layout.twig' %}
{% block content %}
<form class="form form-signin" method="POST" role="form">
    <fieldset>
        <legend>Sign In</legend>
        {% if error %}
            <p class="text-danger">
                {{error}}
            </p>
        {% endif %}
        {% for field in form.getFields() %}
            {% if field.hasError() %}
                <p class="text-danger">
                    {{field.getError()}}
                </p>
            {% endif %}
            <div class="form-group">
                {{ field.toHTML() }}
            </div>
        {% endfor %}
        <div class="form-group">
            <input class="btn btn-default" type="reset"  />
            <input class="btn btn-default" type="submit"  />
        </div>
    </fieldset>
</form>
{% endblock %}
